[Unit]
Description=Web service for arkdep repository
After=network-online.target
Wants=network-online.target

[Container]
Image=docker.io/library/nginx:alpine
PublishPort=80:80
Volume=/home/admin/archimg-builder/nginx.conf:/etc/nginx/conf.d/default.conf:Z
Volume=/mnt/repo:/usr/share/nginx/html:Z

[Service]
Restart=always

[Install]
WantedBy=default.target
